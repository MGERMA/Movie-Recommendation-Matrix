    <servlet-class>com.mvc.controller.AjoutFilmServlet</servlet-class>
  </servlet>
  <servlet>
    <description></description>
    <display-name>RegisterServlet</display-name>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.mvc.controller.RegisterServlet</servlet-class>
  </servlet>
  <servlet>
    <description></description>
    <display-name>VoteServ</display-name>
    <servlet-name>VoteServ</servlet-name>
    <servlet-class>com.mvc.controller.VoteServ</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/RegisterServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ChargementServlet</servlet-name>
    <url-pattern>/ChargementServlet</url-pattern>
  </servlet-mapping>
</web-app>